													"ds_directory": {
														"value": "@pipeline().parameters.pp_directory_out_csv",
														"type": "Expression"
													},
													"ds_file": "@item().name"
												}
											}
										]
									}
								]
							}
						}
					]
				}
			}
		],
		"parameters": {
			"pp_system": {
				"type": "string"
			},
			"pp_directory_in": {
				"type": "string"
			},
			"pp_directory_out_csv": {
				"type": "string"
			},
			"pp_directory_out_text": {
				"type": "string"
			},
			"pp_file": {
				"type": "string"
			}
		},
		"annotations": []
